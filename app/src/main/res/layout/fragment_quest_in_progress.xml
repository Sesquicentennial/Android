<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    android:weightSum="30"
    tools:context="carleton150.edu.carleton.carleton150.MainFragments.QuestInProgressFragment">

    <fragment
        android:id="@+id/quest_map"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="10"
        android:weightSum="4"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimarySemiTransparent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/txt_clue"
                    android:layout_width="match_parent"
                    android:text="Clue here"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/windowBackground"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_hint"
                    android:layout_width="match_parent"
                    android:text="hint here"
                    android:padding="10dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/windowBackground"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>

    <Button
        android:id="@+id/btn_found_location"
        android:padding="10dp"
        android:background="@color/windowBackground"
        android:textColor="@color/colorPrimaryDark"
        android:text="Found it!"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_show_hint"
            android:padding="10dp"
            android:background="@color/windowBackground"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:text="Show Hint"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

</LinearLayout>
